<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pets">

    <Button
        android:id="@+id/glavzak"
        android:layout_width="186dp"
        android:layout_height="63dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="#FF9900"
        android:text="На главный"
        android:textColor="#0C0707"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.808"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/delete3"
        android:layout_width="176dp"
        android:layout_height="58dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#FF9900"
        android:text="Удалить"
        android:textColor="#0C0707"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/izmen3" />

    <Button
        android:id="@+id/izmen3"
        android:layout_width="173dp"
        android:layout_height="67dp"
        android:layout_marginTop="52dp"
        android:text="Изменить"
        android:textColor="#0C0707"
        android:textSize="16sp"
        android:backgroundTint="#FF9900"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.546"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sozdat3" />

    <Button
        android:id="@+id/sozdat3"
        android:layout_width="177dp"
        android:layout_height="57dp"
        android:layout_marginTop="72dp"
        android:backgroundTint="#FF9900"
        android:text="Создать"
        android:textColor="#0C0707"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poisk3" />

    <Button
        android:id="@+id/poisk3"
        android:layout_width="179dp"
        android:layout_height="57dp"
        android:layout_marginTop="120dp"
        android:backgroundTint="#FF9900"
        android:text="Найти"
        android:textColor="#0C0707"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="415dp"
        android:layout_height="729dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/pets"
        tools:layout_editor_absoluteY="1dp" />

    <TextView
        android:id="@+id/petss"
        android:layout_width="186dp"
        android:layout_height="56dp"
        android:layout_marginBottom="32dp"
        android:text="Питомцы"
        android:textColor="#0C0707"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/poisk3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.577"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>